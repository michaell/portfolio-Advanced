extends ../template

block variables
  - var title = 'Мои работы'

block content
    include ../common/header.pug
    .triangle-section
        svg.traingle(xmlns='http://www.w3.org/2000/svg', viewbox='0 0 1000 85', preserveaspectratio='none')
            polygon.left(points='0,0   0,86   500.8,86   500.8,75.5')
            polygon.right(points='1000,0   1000,86   500,86   500,75.5')
    .works-section
        .works-signboard
            h1.works-headline Мои работы
        .my-works
            .my-works__sites
                .sites-information
                    .sites-information__site-name Сайт школы онлайн Образования
                    .sites-information__technologies HTML , CSS, JAVASCRIPT
                    button.sites-information__button
                        img(src="assets/images/icons/link.svg" alt="link icon")
                        span.sites-information__button-name Посмотреть сайт
            .my-works__slider
                .my-works__site-preview
                    ul.site-preview
                        li.site-preview__prev-item
                            .site-preview__prev-img
                                img.site-preview__prev-pic(src="assets/images/site_prev.png" alt="site preview")
                .my-works__slider-buttons
                    .slider-buttons
                        .my-works__left-button
                            .arrow-down
                                
                            ul.left-button
                                li.button-item
                                    .button-item__pic
                                        img.button-item__img(src="assets/images/slider-prev.jpg" alt="slider button")
                        .my-works__right-button
                            .arrow-up
                            ul.right-button
                                li.button-item
                                    .button-item__pic
                                        img.button-item__img(src="assets/images/slider-next.jpg" alt="slider button")
        .reviews
            .reviews__header 
                .rev-headline Что обо мне говорят
                .reviews__background
                    img.reviews__bg(src="assets/images/icons/about_header.svg", alt="background image")
            .reviews__block
                .reviews__item
                    .review
                        .review__text Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
                        .review__sign
                            .review__portrait
                                img.review__pic(src="assets/images/koval_portr.jpg" alt="Dmitrii Kovalchuk portrait")
                            .review__reviewer-information
                                .review__reviewer-name Ковальчук Дмитрий
                                .review__reviewer-position основатель Loftschool
                        .review__quotations
                            img.quotation(src="assets/images/quotation.png", alt="quotation")
                .reviews__item
                    .review
                        .review__text Этот код выдержит любые испытания. Только пожалуйста, не загружается сайт на слишком старых браузерах!
                        .review__sign
                            .review__portrait
                                img.review__pic(src="assets/images/sab_portr.jpg" alt="portrait")
                            .review__reviewer-information
                                .review__reviewer-name Виктор Сабанцев
                                .review__reviewer-position преподаватель Loftschool
                        .review__quotations
                            img.quotation(src="assets/images/quotation.png", alt="Victor Sabantsev portrait")
            .reviews__form
                .form-contact
                    form(class="form" action="" method="post")
                        .form__head Связаться со мной
                        .form__inputs
                            input(class="form__text-input" type="text" placeholder="Имя")
                            input(class="form__text-input" type="text" placeholder="Email")
                            //- input(class="form__textarea" type="textarea" placeholder="Ваше сообщение")
                            textarea(class="form__textarea" name="textarea", cols="30", rows="10" placeholder="Ваше сообщение")
                        .form__button-wrapper    
                            .form__buttons
                                input(class="form__button form__button--left" type="button" value="Отправить")
                                input(class="form__button form__button--right" type="button" value="Очистить")

        //- include ../common/slider.pug
    include ../common/footer.pug